@namespace Code.Shared

@using System.ComponentModel.DataAnnotations
@using FluentValidation;
@using Token.Events
@inherits CodeComponentBase
@inject IKeyLoadEventBus KeyLoadEventBus

<MForm Model="_model" EnableValidation

       OnValidSubmit="HandleOnValidSubmit"
       OnInvalidSubmit="HandleOnInvalidSubmit">
    <MTextField Dark="LayoutOptions.Dark" @bind-Value="_model.Path"
                Label="项目路径">
    </MTextField>
        <MSwitch
            @bind-Value="@_model.Dark"
            TrueValue="1"
            FalseValue="0"
            Label="@(_model.Dark?"黑暗 ":"光明")">
        </MSwitch>
    <MButton Dark="LayoutOptions.Dark" Type="submit">保存</MButton>
</MForm>